## Browser
for_window [class="surf"] floating enable
for_window [class="surf"] move position 277 156
for_window [class="surf"] resize set 1366 768
for_window [class="surf"] move scratchpad
# exec_always --no-startup-id $BROWSER -P scratchpad --url https://chatgpt.com --no-remote --class="bg_browser" &
exec_always --no-startup-id surf chatgpt.com &

# Status Bar
bar {
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
    colors {
      background #282a36
        statusline #ffffff
        separator #44475a
        focused_workspace #bd93f9 #bd93f9 #282a36
        inactive_workspace #44475a #44475a #282a36
    }
}
